# Deployment (Software Wallet)
PRIVATE_KEY=your_private_key_here
TREASURY_ADDRESS=0x_your_multisig_here

# Hardware Wallet Configuration (Optional)
USE_HARDWARE_WALLET=false
LEDGER_ADDRESS=0x_your_ledger_address_here
LEDGER_DERIVATION_PATH=m/44'/60'/0'/0/0
TREZOR_DERIVATION_PATH=m/44'/60'/0'/0/0

# RPC URLs
BASE_RPC_URL=https://mainnet.base.org
ETH_RPC_URL=https://eth.llamarpc.com
FORK_URL=https://mainnet.base.org

# API Keys
BASESCAN_API_KEY=your_basescan_key
ETHERSCAN_API_KEY=your_etherscan_key
COINMARKETCAP_API_KEY=your_cmc_key

# Gas Reporting
REPORT_GAS=false

# ==========================================
# Multisig Configuration (M2 Track 4)
# ==========================================

# Multisig Deployment Settings
MULTISIG_LEVEL=2  # 2=Admin(2-of-3), 3=Treasury(3-of-5), 4=Emergency(1-of-3)
MULTISIG_NAME="Level 2 Admin Multisig"
MULTISIG_THRESHOLD=2  # Number of required signatures
MULTISIG_SIGNERS=  # Comma-separated list (optional, use LEVELx_SIGNER variables instead)

# Level 2: Admin Multisig (2-of-3)
# Purpose: Contract configuration, pause controls
LEVEL2_SIGNER1=0x_admin_signer_1_address_here
LEVEL2_SIGNER2=0x_admin_signer_2_address_here
LEVEL2_SIGNER3=0x_admin_signer_3_address_here

# Level 3: Treasury Multisig (3-of-5)
# Purpose: Fund withdrawals, treasury management
LEVEL3_SIGNER1=0x_treasury_signer_1_address_here
LEVEL3_SIGNER2=0x_treasury_signer_2_address_here
LEVEL3_SIGNER3=0x_treasury_signer_3_address_here
LEVEL3_SIGNER4=0x_treasury_signer_4_address_here
LEVEL3_SIGNER5=0x_treasury_signer_5_address_here

# Level 4: Emergency Multisig (1-of-3)
# Purpose: Emergency pause, critical incident response
LEVEL4_SIGNER1=0x_emergency_signer_1_address_here
LEVEL4_SIGNER2=0x_emergency_signer_2_address_here
LEVEL4_SIGNER3=0x_emergency_signer_3_address_here
